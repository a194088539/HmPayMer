@model HmPMer.Entity.FeedbackInfo

<link rel="stylesheet" type="text/css" href="/static/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="/static/css/bootstrap-responsive.css">
<link rel="stylesheet" type="text/css" href="/static/css/bootstrap-overrides.css">
<link rel="stylesheet" type="text/css" href="/static/css/lib/font-awesome.css">

<link rel="stylesheet" type="text/css" href="/static/css/layout.css">
<link rel="stylesheet" type="text/css" href="/static/css/elements.css">
<link rel="stylesheet" type="text/css" href="/static/css/icons.css">
<link rel="stylesheet" type="text/css" href="/static/css/css.css">
<link rel="stylesheet" type="text/css" href="/static/css/compiled/user-profile.css" media="screen" />

<script src="/static/js/jquery-1.8.3.min.js"></script>
<script src="/static/js/bootstrap.min.js"></script>
<script src="/static/js/theme.js"></script>
<script src="/static/js/layer/layer.js"></script>
<script src="/static/js/base.js"></script>

<div class="container-fluid">
    <div id="pad-wrapper" class="form-page">

        <div class="row-fluid head">
            <div class="span12">
                <h4>反馈详情</h4>
            </div>
        </div>

        <div class="row-fluid withdraw">
            <form id="form_data">
                <div class="field-box withdrawApply">
                    <label>标题：</label>
                    @Model.feedback.Title
                </div>
                <div class="field-box withdrawApply">
                    <label>内容：</label>
                    <div style="width:580px;display:block;word-break: break-all;word-wrap: break-word;"> @Model.feedback.Content</div>                   
                </div>
                @foreach (var item in Model.feedbackreply)
                {
                    <div class="field-box withdrawApply">
                        <label>管理员回复：</label>
                        <div style="width:580px;display:block;word-break: break-all;word-wrap: break-word;">@item.Content<span style="float:right">@(item.AddTime.Value.ToString("yyyy-MM-dd HH:mm:ss"))</span></div>                        
                    </div>
                }
            </form>
        </div>
    </div>
</div>



