@model string
@{
    bool GetLiClass(string page, string current)
    {
        return current.ToLower().StartsWith(page);
    }

    bool GetAClass(string page, string current)
    {
        return page.ToLower().Contains(current.ToLower());
    }
}
<!-- sidebar -->

<div id="sidebar-nav">
    <ul id="dashboard-menu">
        <li @Html.Raw(GetLiClass("/index", Model) ? " class=\"active\"" : "")>
            @if (GetLiClass("/index", Model))
            {
                <div class="pointer">
                    <div class="arrow"></div>
                    <div class="arrow_border"></div>
                </div>
            }
            <a href="/index/index">
                <i class="icon-home"></i>
                <span>账户首页</span>
            </a>
        </li>

        <li @Html.Raw(GetLiClass("/center", Model) ? " class=\"active\"" : "")>
