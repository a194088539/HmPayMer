                <li><a @Html.Raw(GetAClass("/center/safety", Model) ? " class=\"active\" " : "") href="/center/safety">安全中心</a></li>
                <li><a @Html.Raw(GetAClass("/center/userwithdrawindex", Model) ? " class=\"active\" " : "") href="/center/userwithdrawindex">结算账户</a></li>
            </ul>
        </li>

