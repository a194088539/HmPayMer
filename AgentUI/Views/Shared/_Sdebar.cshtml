                <span>结算管理</span>
                <i class="icon-chevron-down"></i>
            </a>
            <ul class="@Html.Raw(GetLiClass("/withdraw", Model)? "active" : "") submenu">
                <li><a @Html.Raw(GetAClass("/withdraw/withdrawapply", Model) ? " class=\"active\" " : "") href="/withdraw/SettleApply">结算申请</a></li>
