
@{
    ViewBag.Title = "支行数据";
    Layout = "~/Views/Shared/_Content.cshtml";
    var dicList = new HmPMer.Business.DistrictBll().LoadParentId(0);
}

@section HeadSection{
    <script src="/scripts/System/BankLasalle.js?@ViewBag.StaticVersion"></script>
}

<div class="layui-form">
    <blockquote class="layui-elem-quote quoteBox">
        <form class="layui-form" id="form_seartch">
            <div class="layui-inline">
                <div class="layui-input-inline">
                    支行名称：
                </div>
                <div class="layui-input-inline">
                    <input type="text" class="layui-input" id="BankLasalleName" name="BankLasalleName" placeholder="支行名称" />
                </div>
                <div class="layui-input-inline">
                    省：
                </div>
                <div class="layui-input-inline" style="width:180px">
                    <select id="ProvinceId" name="ProvinceId" lay-filter="ProvinceId">
                        <option value="">请选择</option>
                        @foreach (var item in dicList)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>

                <div class="layui-input-inline">
                    市：
                </div>
                <div class="layui-input-inline" style="width:180px">
                    <select id="CityId" name="CityId" lay-filter="CityId">
                        <option value="">请选择</option>
                    </select>
                </div>

                <a class="layui-btn search_btn" data-type="reload">搜索</a>

                <div class="layui-inline">
                    <a class="layui-btn layui-btn-normal" id="btn_edit_all">
                        <i class="layui-icon">&#xe608;</i>批量修改
                    </a>
                </div>

            </div>
        </form>
    </blockquote>
    <table id="BankLasalleList" lay-filter="BankLasalleList"></table>

</div>
