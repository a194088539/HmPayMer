                    <select name="GradeId" class="GradeId" lay-filter="GradeId">
                        <option value="0">请选择等级</option>
                        @foreach (var item in gradelist)
                        {
                            <option value="@item.Id" @(Model.GradeId == item.Id ? "selected" : "")>@item.GradeName</option>
                        }
                    </select>
