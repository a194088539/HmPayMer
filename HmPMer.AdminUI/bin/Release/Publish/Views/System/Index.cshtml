                    <td>
                        <input type="text" class="layui-input maxUpload" id="AlRate" name="AlRate" maxlength="5" value="@((int)(Model.AlRate*100))" onkeyup="this.value=this.value.replace(/[^\d{1-9}\.{1}\d{0-9}]/g,'')"
