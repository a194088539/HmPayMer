
@{
    ViewBag.Title = "菜单管理";
    Layout = "~/Views/Shared/_Content.cshtml";
}

@section HeadSection{
    <script src="/scripts/Menu/menu.js?@ViewBag.StaticVersion"></script>
}
<div class="layui-form">
    <blockquote class="layui-elem-quote quoteBox">
        <form class="layui-form" id="form_seartch">
            <div class="layui-inline">
                <div class="layui-input-inline">
                    <input type="text" class="layui-input searchVal" id="menuName" name="menuName"  placeholder="请输入搜索名称" />
                </div>
                <a class="layui-btn search_btn" data-type="reload">搜索</a>
            </div>
            <div class="layui-inline">
                <a class="layui-btn layui-btn-normal addAdmin_btn" id="addadmin_btn">
                    <i class="layui-icon">&#xe608;</i>添加
                </a>
            </div>
        </form>
    </blockquote>
    <table id="menuList" lay-filter="menuList"></table>

    <!--操作-->
    <script type="text/html" id="menuListBar">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    </script>
</div>
