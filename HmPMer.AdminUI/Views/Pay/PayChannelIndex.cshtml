
@{
    ViewBag.Title = "支付通道管理";
    Layout = "~/Views/Shared/_Content.cshtml";
}

@section HeadSection{
    <script src="/scripts/pay/paychannel.js?@ViewBag.StaticVersion"></script>
}

<div class="layui-form">
    <blockquote class="layui-elem-quote quoteBox">
        <form class="layui-form">
            <div class="layui-inline">
                <div class="layui-input-inline">
                    通道编号或名称：
                </div>
                <div class="layui-input-inline">
                    <input type="text" class="layui-input searchVal" placeholder="请输入搜索名称" />
                </div>
                <div class="layui-input-inline">
                    支付类型：
                </div>
                <div class="layui-input-inline">
                    <select id="PayCode" name="PayCode" lay-verify="" lay-filter="PayCode">
                        <option value="">请选择</option>
                        @{ var typeList = new HmPMer.Business.PayBll().GetPayTypeList();}
                        @foreach (var item in typeList)
                        {
                            <option value="@item.PayCode">@item.PayName</option>
                        }

                    </select>
                </div>

                <a class="layui-btn search_btn" data-type="reload">搜索</a>
            </div>
            <div class="layui-inline">
                <a class="layui-btn layui-btn-normal addAdmin_btn"><i class="layui-icon">&#xe608;</i>添加</a>
            </div>
        </form>
    </blockquote>
    <table id="paychannelList" lay-filter="paychannelList"></table>

    <!--操作-->
    <script type="text/html" id="paychannelListBar">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="deldata">删除</a>
    </script>
</div>
