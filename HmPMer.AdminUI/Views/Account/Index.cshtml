
@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_Content.cshtml";
}

@section HeadSection{
    <script src="/scripts/account/adminlist.js?@ViewBag.StaticVersion"></script>
}

<div class="layui-form">
    <blockquote class="layui-elem-quote quoteBox">
        <form class="layui-form">
            <div class="layui-inline">
                <div class="layui-input-inline">
                    <input type="text" class="layui-input searchVal" placeholder="请输入搜索用户名或昵称" />
                </div>
                <a class="layui-btn search_btn" data-type="reload">搜索</a>

            </div>
            <a class="layui-btn layui-btn-normal" id="addadmin_btn">
                <i class="layui-icon">&#xe608;</i>添加
            </a>

        </form>
    </blockquote>
    <table id="AdminList" lay-filter="AdminList"></table>

    <!--操作-->
    <script type="text/html" id="AdminListBar">
        <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="editpwd">重置密码</a>
        <a class="layui-btn layui-btn-xs" lay-event="editrate">编辑</a>
        <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="deldata">删除</a>
    </script>
</div>
